<%= form_for @character do |c| %>
    <%= c.label "Name:" %>
    <%= c.text_field :name %><br>
    <%= c.label "Class:" %>
    <%= c.text_field :warrior %><br>
    <%= c.label "Current Level:" %>
    <%= c.text_field :level %><br>
    <%= c.label "Spells:" %><br>
    <%= c.collection_check_boxes :spell_ids, @user.spells, :id, :name %><br>
    <%= c.label "Backstory:" %><br>
    <%= c.text_area :backstory %><br>
    <%= c.submit "Create Character" %>
    <% end %>
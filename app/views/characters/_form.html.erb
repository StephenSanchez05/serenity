<%= form_for @character do |c| %>
    <%= c.label "Name:" %>
    <%= c.text_field :name %><br>
    <%= c.label "Class:" %>
    <%= c.text_field :warrior %><br>
    <%= c.label "Current Level:" %>
    <%= c.text_field :level %><br>
    <%= c.label "Spells:" %>
    <%= c.collection_check_boxes :spell_ids, Spell.all, :id, :name %><br>
    <%= c.label "Create a new Spell:" %>
    <%= c.fields_for :spells, @character.spells.build do |s| %>
        <%= s.text_field :name %><br>
        <% end %>
    <%= c.label "Backstory:" %><br>
    <%= c.text_area :backstory %><br>
    <%= c.submit %>
    <% end %>
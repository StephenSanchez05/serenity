<% if @user.errors.any? %>
  <div id="error_explanation">
    <h2>There were some errors:</h2>
    <ul>
      <% @user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<%= form_for @user do |s| %>
    <%= s.label "Name" %>     
    <%= s.text_field :name %><br>
    <%= s.label "Password" %>
    <%= s.password_field :password %><br>
    <%= s.submit %>
    <% end %>
